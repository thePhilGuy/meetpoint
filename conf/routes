# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                  controllers.Application.login
GET         /index/:facebookId                 controllers.Application.index(facebookId: String)
POST        /session/:userId                   controllers.SessionController.createSession(userId: Long)
GET         /user/:userId                      controllers.UserController.showUser(userId: Long)
GET         /session/:sessionId,:userId        controllers.SessionController.showSession(sessionId: Long,userId: Long)
POST        /session/:sessionId/:userId        controllers.SessionController.inviteUser(sessionId: Long, userId: Long)
GET         /leaveSession/:sessionId,:userId   controllers.SessionController.leaveSession(sessionId: Long, userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.at(path="/public", file)

    