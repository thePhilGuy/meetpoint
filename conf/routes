# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                  controllers.Application.login
POST        /user                              controllers.User.createUser
POST        /session                           controllers.Session.createSession
GET         /user/:userId                      controllers.User.showUser(userId: Long)
GET         /session/:sessionId                controllers.Session.showSession(sessionId: Long)
POST        /session/:sessionId/:userId        controllers.Session.addUserToSession(sessionId: Long, userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.at(path="/public", file)

    